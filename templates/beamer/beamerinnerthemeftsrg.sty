\defbeamertemplate*{title page}{ftsrg theme}[1][]
{
  \vspace*{1cm}
  \begingroup
    \centering
    \begin{beamercolorbox}[sep=12pt,center,#1]{title}
      \usebeamerfont{title}\inserttitle\par%
      \ifx\insertsubtitle\@empty%
      \else%
        \vskip0.25em%
        {\usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle\par}%
      \fi%     
    \end{beamercolorbox}%
    \vskip1em\par
    \begin{beamercolorbox}[sep=8pt,center,#1]{author}
      {\usebeamerfont{author}\insertauthor}
      \ifx\insertsupervisor\@empty%
      \else%
      \\{\usebeamerfont{supervisor}\insertsupervisor}
      \fi%
    \end{beamercolorbox}
    \begin{beamercolorbox}[sep=8pt,center,#1]{institute}
      \usebeamerfont{institute}\insertinstitute
    \end{beamercolorbox}
    \vskip-0.25em\par
    {\usebeamercolor[fg]{titlegraphic}\includegraphics[width=2.646cm]{ftsrg_logo_large.png}\par}
  \endgroup
}